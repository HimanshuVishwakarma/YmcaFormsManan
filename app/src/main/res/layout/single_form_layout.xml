<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:src="@mipmap/bg_splash"
            android:id="@+id/previous_form_image"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/previous_form_image"
            android:layout_marginTop="10dp"
            android:id="@+id/previous_form_name"
            android:text="Name"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/previous_form_name"
            android:layout_marginTop="5dp"
            android:id="@+id/previous_form_description"
            android:text="description"
            android:textSize="20sp"
            android:layout_marginBottom="25dp"/>

                </RelativeLayout>
        </android.support.v7.widget.CardView>

</RelativeLayout>